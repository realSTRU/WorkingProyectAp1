                    </div>
                </div>

            </div>

        </div>

        




    </EditForm>



</body>


@code
{

    [Parameter]

    public int PersonaID {get; set;}

    public Persona persona {get; set;} = new Persona();

     protected override void OnInitialized(){

        if(PersonaID > 0)
        {
            this.persona.PersonaID = PersonaID;
            this.Buscar();
        }

        
    }

    private void Buscar()
    {
        var personaEncontrada = personaBll.Buscar(persona.OcupacionID);

        if(personaEncontrada != null)
        {
            Console.WriteLine($"Se encontro la persona con el ID{this.persona.PersonaID}");
            this.persona = personaEncontrada;
        }
        else
        {
            Nuevo();
            Console.WriteLine("Persona no encontrada");
        }
    }

    public void Nuevo()
    {
        this.persona = new Persona();
    }

    public bool Validar(){
        return this.persona.Nombre != "" && this.persona.Telefono != "";
    }

    public void Guardar(){

        if(Validar())
        {
            personaBll.Guardar(this.persona);
            Console.WriteLine($"Se guardo en el {this.persona.OcupacionID}");
            Nuevo();
        }
        else
        {
            Console.WriteLine("Campos no validos o no completados");
        }
    }

    public void Eliminar()
    {
        if(Validar())
        {
            bool RES = personaBll.Eliminar(this.persona);

            if(RES == false)
            {
                Console.WriteLine("Eliminado Correctamente");
                Nuevo();
            }
            else
            {
                Console.WriteLine("Errores al guardar la persona");
            }
        }
        else
        {
            Console.WriteLine("Id No valido");
        }
    }



}






