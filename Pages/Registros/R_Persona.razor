@page "/R_Personas"
@page "/R_Personas/{PersonaID:int}"


@inject PersonaBLL personaBll
@inject OcupacionesBLL ocupacionesBll


<PageTitle>Registro Persona.</PageTitle>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    

    <style>
            
        body{
            background-image: url('https://wallpaper.dog/large/5451779.jpg');
            background-attachment: fixed;
            background-size: cover;
            font-family: monospace;
            margin: 0;
            padding: 0;
        }

    </style>
</head>

<body>

    <EditForm model="Persona">
        <DataAnnotationsValidator/>

        <div class="container">
            <div class="card text-dark bg-light mb-3 shadow-lg">
                <div class="card-header">
                    <h4>Registro persona.</h4>
                </div>
                

                <div class="card-body">
                    
                    <div class="form-group">

                        <div class="col-5 mb-3">
                            <label for="IDPersona">Persona Id:</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="IDPersona" @bind-value="persona.PersonaID">
                                <button class="btn btn-outline-primary" type="button"@onclick="Buscar"><b><Buscar class="oi oi-magnifying-glass"/> Buscar</b></button>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="Nombres"><b>Nombres:</b></label>
                            <div class="input-group mb-6">
                                <input @bind-value="persona.Nombre" type="text" id="Nombres" class="form-control"/>
                            </div>

                        </div>

                        <div class="mb-3">
                                <label for="Nac"><b>Nacimiento:</b></label>
                                <div class="input-group mb-6">
                                    <input @bind-value="persona.FechaNacimiento"type="date"  class="form-control" aria-label="Recipient's username"
                                    aria-describedby="basic-addon2" id="Nac"/>
                                </div>

                            </div>
                        
                        
                        <div class="mb-3">
                            <label for="Direccion"><b>Direcci√≥n:</b></label>
                            <div class="input-group mb-6">
                                <input @bind-value="persona.Direccion" type="text" id="Direccion" class="form-control"/>
                            </div>

                        </div>

                        <div class="mb-3">
                            <label for="Email"><b>Email:</b></label>
                            <div class="input-group mb-6">
                                <input @bind-value="persona.Email" type="text" id="Email" class="form-control"/>
                            </div>

                        </div>


                        <div class="mb-3">
                            <label for="Celular"><b>Celular:</b></label>
                            <div class="input-group mb-6">
                                <input @bind-value="persona.Celular" type="text" id="Celular" class="form-control"/>
                            </div>

                        </div>

                        <div class="mb-3">
                            <label for="Telefono"><b>Telefono:</b></label>
                            <div class="input-group mb-6">
                                <input @bind-value="persona.Telefono" type="text" id="Telefono" class="form-control"/>
                            </div>

                        </div>
                        

                        <div class="col-6">
                            <label><b>Ocupaciones:</b></label>
                            <InputSelect class="form-select" @bind-Value="persona.OcupacionID">
                                <option value="0" disabled> Seleccione </option>
                                @foreach (var ocu in L_Ocupacion)
                                {
                                    <option value="@ocu.OcupacionID"> @ocu.Descripcion</option>
                                }
                            </InputSelect>

                        </div>

                        <div class="mb-3">
                            <label for="Balance"><b>Balance:</b></label>
                            <div class="input-group mb-6">
                                <input  @bind-value="persona.Balance" type="text" id="Balance" class="form-control" disabled/>
                            </div>

                        </div>


                        


                        
                        

                        

                    </div>

                </div>
                <div class="card-footer d-flex justify-content-center">
                    <div class="row">
                        <div class="btn-group">
                            <button class="btn btn-dark" type="button"@onclick="Guardar"><i class="oi oi-document"/><b> Guardar</b></button>
                            <button class="btn btn-secondary" type="button"@onclick="Nuevo"><i class="oi oi-file"/><b> Nuevo</b></button>
                            <button class="btn btn-dark" type="button"@onclick="Eliminar"><i class="oi oi-trash"/><b> Eliminar</b></button>
                        </div>
                    </div>
                </div>

            </div>

        </div>

        




    </EditForm>



</body>


@code
{

    [Parameter]

    public int PersonaID {get; set;}

    public Persona persona {get; set;} = new Persona();
    public Ocupacion ocupacion {get; set;} = new Ocupacion();
    
    public List<Ocupacion> L_Ocupacion = new List<Ocupacion>();

     protected override void OnInitialized(){


        L_Ocupacion = ocupacionesBll.GetList();
        if(PersonaID > 0)
        {
            this.persona.PersonaID = PersonaID;
            this.Buscar();
        }

        
    }

    private void Buscar()
    {
        var personaEncontrada = personaBll.Buscar(persona.PersonaID);

        if(personaEncontrada != null)
        {
            Console.WriteLine($"Se encontro la persona con el ID{this.persona.PersonaID}");
            this.persona = personaEncontrada;
        }
        else
        {
            Nuevo();
            Console.WriteLine("Persona no encontrada");
        }
    }

    public void Nuevo()
    {
        this.persona = new Persona();
    }

    public bool Validar(){
        return this.persona.Nombre != "" && this.persona.Telefono != "";
    }

    public void Guardar(){

        if(Validar())
        {
            personaBll.Guardar(this.persona);
            Console.WriteLine($"Se guardo en el {this.persona.PersonaID}");
            Nuevo();
        }
        else
        {
            Console.WriteLine("Campos no validos o no completados");
        }
    }

    public void Eliminar()
    {
        if(Validar())
        {
            bool RES = personaBll.Eliminar(this.persona);

            if(RES == false)
            {
                Console.WriteLine("Eliminado Correctamente");
                Nuevo();
            }
            else
            {
                Console.WriteLine("Errores al guardar la persona");
            }
        }
        else
        {
            Console.WriteLine("Id No valido");
        }
    }



}






